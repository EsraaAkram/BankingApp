<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_40sdp"
        >

        <ImageView
            android:id="@+id/iconImg"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/ic_money"
            app:layout_constraintBottom_toTopOf="@+id/allUsersBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/allUsersBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_theme_dark_blue"
            android:text="@string/all_users"
            android:textAllCaps="false"

            android:textColor="@color/white"
            android:textSize="@dimen/_21ssp"
            app:layout_constraintBottom_toTopOf="@+id/allTransactionsBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iconImg"
            app:layout_constraintVertical_bias="0.5"

            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"

            />


        <Button
            android:id="@+id/allTransactionsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_theme_dark_blue"
            android:text="@string/all_transactions"
            android:textAllCaps="false"

            android:textColor="@color/white"
            android:textSize="@dimen/_21ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allUsersBtn"
            app:layout_constraintVertical_bias="0.5"

            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>